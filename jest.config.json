{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/__tests__/**/*.test.ts",
    "**/__tests__/**/*.test.tsx"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.tsx?"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 92,
      "functions": 92,
      "lines": 92,
      "statements": -10
    }
  },
  "coverageReporters": [
    "json",
    "html"
  ]
}